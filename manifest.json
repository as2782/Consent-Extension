{
  "name": "Privacy Panda",
  "description": "Monitoring Consent on Children's Sites",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "128": "./icon.png",
    "64": "./full_icon.png"
  },
  "incognito": "split",
  "background": {
    "_comment1": "these are the scripts to run",
    "scripts": [
      "./background.js"
    ]
  },
  "options_page": "./options.html",
  "browser_action": {
    "default_icon": "./icon.png",
    "default_popup": "popup.html",
    "default_title": "Privacy Panda"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "https://www.google.com/*"
  ]
}